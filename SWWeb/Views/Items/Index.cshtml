@using SWWeb.Models.Items

@model ItemsModel

@{
    ViewBag.Title = "Lista de Produtos";
}

<div class="row" style="margin-top:20px;">
    <div class="col-md-6">
        <h4>Lista de Produtos</h4>
    </div>
    <div class="col-md-6 text-right">
        <a class="btn btn-primary" id="AddButton" href="#" title="Adicionar" data-toggle="modal" data-target="#AddEditModal"><i class="glyphicon glyphicon-plus"></i> Adicionar</a>
    </div>
</div>

<table class="table">
    <tr>
        <th>Nome</th>
        <th>Preço</th>
        <th></th>
    </tr>

    @foreach (var item in Model.Items)
    {
        <tr>
            <td>@item.Name</td>
            <td>R$ @item.Price.ToString("0.00")</td>
            <td>
                <div class="btn-group-sm">
                    <a class="btn editButton" href="#" title="Editar" data-toggle="modal" data-target="#AddEditModal" data-itemid="@item.Id" data-itemname="@item.Name" data-itemprice="@item.Price.ToString("0.00")" data-itempromotion="@item.Promotion"><i class="glyphicon glyphicon-edit"></i></a>
                    <a class="btn"href="#" title="Deletar" data-toggle="modal" data-target="#DeleteModal" data-itemid="@item.Id"><i class="glyphicon glyphicon-trash"></i></a>
                </div>
            </td>
        </tr>
    }

</table>

<!-- Modal Add / Edit -->
<div class="modal fade" id="AddEditModal" tabindex="-1" role="dialog" aria-labelledby="AddEditModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                    <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title">Adicionar novo produto</h4>
            </div>

            <div class="modal-body">
                <form role="form" id="ItemForm">
                    <input class="form-control" type="hidden" name="Id" id="Id" />
                    <div class="form-group">
                        <label for="Name">Nome</label>
                        <input type="text" class="form-control" name="Name" id="Name" />
                    </div>
                    <div class="form-group">
                        <label for="Price">Preço</label>
                        <input type="text" class="form-control" name="Price" id="Price" />
                    </div>
                    <div class="form-group">
                        <label for="Promotion">Promoção:</label>
                        <select class="form-control" name="Promotion" id="Promotion">
                            @foreach(var promotion in Model.Promotions)
                            {
                                <option value="@promotion.Key">@promotion.Value</option>
                            }
                        </select>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="ItemSave">Salvar</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Delete -->
<div class="modal fade" id="DeleteModal" tabindex="-1" role="dialog" aria-labelledby="DeleteModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                    <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title">Deletar produto</h4>
            </div>

            <div class="modal-body">
                <p>Tem certeza que deseja deletar o produto <span id="deleteItemName"></span>?</p>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="ItemSave">Confirmar</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript" src="~/Scripts/Views/Items_Index.js"></script>
}