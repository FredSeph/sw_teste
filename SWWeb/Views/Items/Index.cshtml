@using SWWeb.Models.Items

@model IndexModel

@{
    ViewBag.Title = "Lista de Produtos";
}

<h2>Lista de Produtos <a class="btn btn-primary btn-lg" href="#" title="Adicionar" data-toggle="modal" data-target="#AddEditModal"><i class="glyphicon glyphicon-plus"></i></a></h2>

<table class="table">
    <tr>
        <th>Nome</th>
        <th>Preço</th>
        <th></th>
    </tr>

    @foreach (var item in Model.Items)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>
                <div class="btn-group-sm">
                    <a class="btn" href="#" title="Editar" data-toggle="modal" data-target="#AddEditModal"><i class="glyphicon glyphicon-edit"></i></a>
                    <a class="btn" href="#" title="Deletar"><i class="glyphicon glyphicon-trash"></i></a>
                </div>


                @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
            </td>
        </tr>
    }

</table>

<!-- Modal Add -->

<div class="modal fade" id="AddEditModal" tabindex="-1" role="dialog"
     aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                    <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title">Adicionar novo produto</h4>
            </div>

            <div class="modal-body">
                <form role="form" id="ItemForm">
                    <input type="hidden" name="Id" id="Id" />
                    <div class="form-group">
                        <label for="Name">Nome</label>
                        <input type="text" class="form-control" name="Name" id="Name" />
                    </div>
                    <div class="form-group">
                        <label for="Price">Preço</label>
                        <input type="text" class="form-control" name="Price" id="Price" />
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="ItemSave">Salvar</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript" src="~/Scripts/Views/Items_Index.js"></script>
}